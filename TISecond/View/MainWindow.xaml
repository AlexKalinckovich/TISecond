<Window x:Class="TISecond.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CryptoApp" Height="450" Width="800">
    <Grid>
        <!-- Левая панель управления -->
        <Border BorderBrush="Black" 
                BorderThickness="10" 
                Width="380" 
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch">
            <StackPanel Background="LightGray">
                <!-- Переключатель режимов -->
                <RadioButton Content="Шифровать" 
                           GroupName="Mode" 
                           IsChecked="True" 
                           Name="EncryptMode" 
                           Margin="10,20,0,0"/>
                <RadioButton Content="Дешифровать" 
                           GroupName="Mode" 
                           Name="DecryptMode" 
                           Margin="10,10,0,0"/>

                <!-- Панель для ключа -->
                <Label Content="Введите ключ:" 
                       FontFamily="Times New Roman" 
                       FontSize="18" 
                       Margin="10,0,0,0"/>
                <TextBox x:Name="KeyInput" 
                       Width="300" 
                       FontFamily="Times New Roman" 
                       FontSize="16" 
                       MaxLength="24"
                       HorizontalAlignment="Left" 
                       Height="40" 
                       Margin="10,0,0,0"/>

                <!-- Панель для выбора исходного файла -->
                <Label Content="Путь к файлу с исходным текстом:" 
                       FontFamily="Times New Roman" 
                       FontSize="18" 
                       Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal" 
                          VerticalAlignment="Center" 
                          Margin="0,10,0,0">
                    <TextBox x:Name="InputFilePath" 
                           Width="250" 
                           Height="60" 
                           IsReadOnly="True" 
                           Text="Путь к файлу..." 
                           FontFamily="Times New Roman" 
                           FontSize="14"
                           HorizontalScrollBarVisibility="Auto" 
                           Margin="10,0,0,0"/>
                    <Button Width="50" 
                          Height="30" 
                          Margin="10,0,0,0"
                          Click="OpenCipherFileButtonClick">
                        <Image Source="/View/Icons/file.png"
                             Stretch="Uniform"/>
                    </Button>
                </StackPanel>

                <!-- Панель для выбора выходного файла -->
                <Label Content="Путь к файлу, куда будет записан результат:" 
                       FontFamily="Times New Roman" 
                       FontSize="18" 
                       Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal" 
                          VerticalAlignment="Center" 
                          Margin="0,10,0,0">
                    <TextBox x:Name="OutputFilePath" 
                           Width="250" 
                           Height="60" 
                           IsReadOnly="True" 
                           Text="Путь выходного файла..." 
                           FontFamily="Times New Roman" 
                           FontSize="14" 
                           HorizontalScrollBarVisibility="Auto" 
                           Margin="10,0,0,0"/>
                    <Button Width="50" 
                          Height="30" 
                          Margin="10,0,0,0"
                          Click="OpenResultFileButtonClick">
                        <Image Source="/View/Icons/file.png" 
                             Stretch="Uniform"/>
                    </Button>
                </StackPanel>

                <!-- Кнопка выполнения -->
                <Button VerticalAlignment="Center" 
                      HorizontalAlignment="Left" 
                      Width="300" 
                      Height="30" 
                      Margin="10,30,30,30"
                      Content="Выполнить" 
                      FontFamily="Times New Roman" 
                      FontSize="14" 
                      FontStyle="Normal"
                      Click="StartProcessButtonClick"/>
            </StackPanel>
        </Border>

        <!-- Правая панель с содержимым файлов -->
        <Grid Margin="380,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя часть: исходный файл -->
            <Border Grid.Row="0" 
                  BorderBrush="Black" 
                  BorderThickness="0,0,10,0">
                <StackPanel>
                    <Label Content="Текст исходного файла" 
                         Foreground="White" 
                         Background="Black"
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Center"
                         Padding="5" 
                         FontFamily="Times New Roman" 
                         FontSize="16"/>
                    <ListView x:Name="InputFileListView"
                            Margin="10,5" 
                            Background="White" 
                            BorderThickness="0"
                            FontFamily="Times New Roman" 
                            FontSize="14"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Stretch"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <!-- Нижняя часть: выходной файл -->
            <Border Grid.Row="1" 
                  BorderBrush="Black" 
                  BorderThickness="0,0,10,10">
                <StackPanel>
                    <Label Content="Текст выходного файла" 
                         Foreground="White" 
                         Background="Black"
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Center"
                         Padding="5" 
                         FontFamily="Times New Roman" 
                         FontSize="16"/>
                    <ListView x:Name="OutputFileListView"
                            Margin="10,5" 
                            Background="White" 
                            BorderThickness="0"
                            FontFamily="Times New Roman" 
                            FontSize="14"
                            VerticalAlignment="Bottom" 
                            HorizontalAlignment="Stretch"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
    
</Window>