<Window x:Class="TISecond.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CryptoApp" Height="450" Width="800">
    <Grid>
        <!-- Левая панель управления -->
        <Border BorderBrush="Black" 
                BorderThickness="10" 
                Width="380" 
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch">
            <StackPanel Background="LightGray">

                <!-- Панель для ключа -->
                <Label Content="Введите ключ:" 
                       FontFamily="Times New Roman" 
                       FontSize="18" 
                       Margin="10,0,0,0"/>
                <TextBox x:Name="KeyInput" 
                       Width="300" 
                       FontFamily="Times New Roman" 
                       FontSize="16" 
                       MaxLength="24"
                       HorizontalAlignment="Left" 
                       Height="40" 
                       Margin="10,0,0,0"/>

                <!-- Панель для выбора исходного файла -->
                <Label Content="Путь к файлу с исходным текстом:" 
                       FontFamily="Times New Roman" 
                       FontSize="18" 
                       Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal" 
                          VerticalAlignment="Center" 
                          Margin="0,10,0,0">
                    <TextBox x:Name="InputFilePath" 
                           Width="250" 
                           Height="60" 
                           IsReadOnly="True" 
                           Text="Путь к файлу..." 
                           FontFamily="Times New Roman" 
                           FontSize="14"
                           HorizontalScrollBarVisibility="Auto" 
                           Margin="10,0,0,0"/>
                    <Button Width="50" 
                          Height="30" 
                          Margin="10,0,0,0"
                          Click="OpenCipherFileButtonClick">
                        <Image Source="/View/Icons/file.png"
                             Stretch="Uniform"/>
                    </Button>
                </StackPanel>

                <!-- Панель для выбора выходного файла -->
                <Label Content="Путь к файлу, куда будет записан результат:" 
                       FontFamily="Times New Roman" 
                       FontSize="18" 
                       Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal" 
                          VerticalAlignment="Center" 
                          Margin="0,10,0,0">
                    <TextBox x:Name="OutputFilePath" 
                           Width="250" 
                           Height="60" 
                           IsReadOnly="True" 
                           Text="Путь выходного файла..." 
                           FontFamily="Times New Roman" 
                           FontSize="14" 
                           HorizontalScrollBarVisibility="Auto" 
                           Margin="10,0,0,0"/>
                    <Button Width="50" 
                          Height="30" 
                          Margin="10,0,0,0"
                          Click="OpenResultFileButtonClick">
                        <Image Source="/View/Icons/file.png" 
                             Stretch="Uniform"/>
                    </Button>
                </StackPanel>

                <!-- Кнопка выполнения -->
                <Button VerticalAlignment="Center" 
                      HorizontalAlignment="Left" 
                      Width="300" 
                      Height="30" 
                      Margin="10,30,30,30"
                      Content="Выполнить" 
                      FontFamily="Times New Roman" 
                      FontSize="14" 
                      FontStyle="Normal"
                      Click="StartProcessButtonClick"/>
                <ListView x:Name="KeyViewer"
                          Margin="10,5" 
                          Background="White" 
                          Height="300"
                          BorderThickness="0"
                          FontFamily="Times New Roman" 
                          FontSize="14"
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>

        <!-- Правая панель с содержимым файлов -->
<Grid Margin="380,0,0,0">
    <Grid.RowDefinitions>
        <RowDefinition Height="2*"/> <!-- 2/3 высоты под файл и ручной ввод -->
        <RowDefinition Height="Auto"/> <!-- Для GridSplitter -->
        <RowDefinition Height="*"/>  <!-- 1/3 под результат -->
    </Grid.RowDefinitions>

    <!-- Верхняя часть: исходные данные -->
    <Grid Grid.Row="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>    <!-- TextBox -->
        </Grid.RowDefinitions>

        <!-- Заголовок файлового представления -->
        <Label Content="Текст исходного файла" 
               Grid.Row="0"
               Foreground="White" 
               Background="Black"
               Padding="5" 
               FontFamily="Times New Roman" 
               FontSize="16"/>

        <!-- Поле для ручного ввода -->
        <TextBox x:Name="ManualBitsInput"
                  Grid.Row="1"
                  Margin="10,2,10,5" 
                  FontFamily="Consolas" 
                  FontSize="14"
                  AcceptsReturn="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  TextWrapping="Wrap"
                  MaxLength="4096"/>
    </Grid>

    <!-- GridSplitter для изменения размера -->
    <GridSplitter Grid.Row="1" 
                  Height="5" 
                  Background="Gray" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Center" 
                  />

    <!-- Нижняя часть: выходной файл -->
    <Border Grid.Row="2" 
            BorderBrush="Black" 
            BorderThickness="0,2,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Текст выходного файла" 
                   Grid.Row="0"
                   Foreground="White" 
                   Background="Black"
                   Padding="5" 
                   FontFamily="Times New Roman" 
                   FontSize="16"/>

            <ListView x:Name="OutputFileListView"
                      Grid.Row="1"
                      Margin="10,5" 
                      Background="White" 
                      FontFamily="Times New Roman" 
                      FontSize="14"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        </Grid>
    </Border>
</Grid>
    </Grid>
    
</Window>